<div class="add-food-div d-flex">
  <%= link_to 'Add Food', new_food_path, class: 'btn btn-primary', data: {turbo: false} %>
</div>
<table>
  <tr>
    <th>Food</th>
    <th>Measurement Unit</th>
    <th>Unit Price</th>
    <th>quantity</th>
    <th>Actions</th>
  </tr>
  <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td><%= food.quantity %></td>
      <td><%= link_to 'Delete', food_url(food) %></td>
    </tr>
  <% end %>
</table>
